{
  "ecmaFeatures": {
    "jsx": true,
    "modules": true
  },

  "parser": "babel-eslint",

  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },

  "rules": {
    "quotes": [2, "single"],
    "strict": [2, "never"],
    "react/jsx-uses-react": 2,
    "react/jsx-uses-vars": 2,
    "react/react-in-jsx-scope": 2,
    "eol-last": [0],
    "no-mixed-requires": [0],
    "no-underscore-dangle": [0],
    "semi": [2, "always"],
    "indent": [2, 2, { SwitchCase: 1 }]
  },

  plugins: [
    "react",
    "babel"
  ]
}
